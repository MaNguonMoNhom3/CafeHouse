<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <button type="button" class="btn btn-primary" style="margin-bottom: 50px;" data-toggle="modal"
                        data-target="#basicModal">Add</button>
                    <!-- Modal -->
                    <div class="modal fade" id="basicModal">
                        <form action="/admin/product" method="post">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Add</h5>
                                        <button type="button" class="close" data-dismiss="modal"><span>&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <table>
                                            <tr style="margin-bottom: 10px;"">
                                                <td width=" 40%">Name</td>
                                                <td><input type="text" name="Name" id="name"></td>
                                            </tr>
                                            <tr>
                                                <td>Price</td>
                                                <td><input type="text" name="Price" id="price"></td>
                                            </tr>
                                            <tr>
                                                <td>Discount</td>
                                                <td><input type="text" name="Discount" id="discount"></td>
                                            </tr>
                                            <tr>
                                                <td>Description</td>
                                                <td><input type="text" name="Description" id="description"></td>
                                            </tr>
                                            <tr>
                                                <td>Image</td>
                                                <td><input type="text" name="Image" id="image"></td>
                                            </tr>
                                            <tr>
                                                <td>Hot</td>
                                                <td><input type="text" name="Hot" id="hot"><br></td>
                                            </tr>
                                            <tr>
                                                <td>Category</td>
                                                <td><input type="text" name="Category" id="category"><br></td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Save changes</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <h4 class="card-title">Data Table</h4>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Image</th>
                                    <th>Created At</th>
                                    <th>Updated At</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each product}}
                                <tr>
                                    <td>{{this._id}}</td>
                                    <td>{{this.Name}}</td>
                                    <td>{{this.Price}}</td>
                                    <td>{{this.Image}}</td>
                                    <td>{{this.createdAt}}</td>
                                    <td>{{this.updatedAt}}</td>
                                    <td>
                                        <a class="btn btn-primary" style="color: white;" data-toggle="modal"
                                            data-target="#editModal{{this._id}}">Edit</a>
                                        <div class="modal fade" id="editModal{{this._id}}">
                                            <form action="/admin/product/{{this._id}}" method="post">
                                                <div class="modal-dialog" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">Edit</h5>
                                                            <button type="button" class="close"
                                                                data-dismiss="modal"><span>&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <table>
                                                                <tr style="margin-bottom: 10px;"">
                                                <td width=" 40%">Name
                                    </td>
                                    <td><input type="text" name="Name" id="name"></td>
                                </tr>
                                <tr>
                                    <td>Price</td>
                                    <td><input type="text" name="Price" id="price"></td>
                                </tr>
                                <tr>
                                    <td>Discount</td>
                                    <td><input type="text" name="Discount" id="discount"></td>
                                </tr>
                                <tr>
                                    <td>Description</td>
                                    <td><input type="text" name="Description" id="description"></td>
                                </tr>
                                <tr>
                                    <td>Image</td>
                                    <td><input type="text" name="Image" id="image"></td>
                                </tr>
                                <tr>
                                    <td>Hot</td>
                                    <td><input type="text" name="Hot" id="hot"><br></td>
                                </tr>
                                <tr>
                                    <td>Category</td>
                                    <td><input type="text" name="Category" id="category"><br></td>
                                </tr>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
            </form>
        </div>
        <a data-confirm="Are you sure?" data-method="delete" href="/admin/product/{{this._id}}"
            class="btn btn-danger">Delete</a>
        </td>
        </tr>
        {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Image</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th></th>
            </tr>
        </tfoot>
        </table>
    </div>
</div>
</div>
</div>
</div>
</div>