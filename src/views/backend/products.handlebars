<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Sản phẩm</h1>


        <a href="#" class="btn btn-success" style="width: 200px;margin-bottom: 50px;">Thêm sản phẩm</a>

        <div class="card mb-4">
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Office</th>
                            <th>Age</th>
                            <th>Start date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Position</th>
                            <th>Office</th>
                            <th>Age</th>
                            <th>Start date</th>
                            <th>Salary</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {{#each product}}
                        <tr>
                            <td>{{this._id}}</td>
                            <td>{{this.Name}}</td>
                            <td>{{this.createdAt}}</td>
                            <td>{{this.updatedAt}}</td>
                            <td>
                                <a href="" class="btn btn-info">Edit</a>
                                <a data-confirm="Are you sure?" data-method="delete" href="/admin/product/{{this._id}}"
                                    class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>